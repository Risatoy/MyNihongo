<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_card33"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.risatoyoshima.mynihongo.card3_8"
    android:background="#aeddea">

    <Button
        android:id="@+id/btn_start"
        android:layout_height="50dp"
        android:onClick="start"
        android:text="Start"
        android:layout_width="80dp"
        android:background="@drawable/button_border"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/imageView1"
        android:layout_toStartOf="@+id/btn_play" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginRight="40dp"
        android:onClick="stop"
        android:text="Stop"
        android:background="@drawable/button_border"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/imageView1"
        android:layout_toEndOf="@+id/btn_play" />

    <Button
        android:id="@+id/btn_play"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:onClick="play"
        android:text="play"
        android:layout_marginTop="27dp"
        android:background="#F9E79F"
        android:layout_below="@+id/btn_start"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/animal8"
        android:id="@+id/fruit1"
        android:layout_height="200dp"
        android:layout_marginTop="47dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView1"
        android:scaleType="fitXY"
        android:src="@drawable/record"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/fruit1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Cat [Neco]"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textSize="30px"
        android:textAlignment="center"
        android:id="@+id/textView3"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:textColor="#5D6D7E" />

</RelativeLayout>
